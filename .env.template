# .env.template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# HUGGING FACE
# ===========================================
HF_TOKEN=your_huggingface_token_here

# ===========================================
# DATABASE CREDENTIALS
# ===========================================
# Admin user (for web app and initial setup)
DB_ADMIN_USER=dm_admin
DB_ADMIN_PASSWORD=CHANGE_ME_super_secret_admin_pass_12345

# Application user (for LLM service)
DB_USER=llama_user
DB_PASSWORD=CHANGE_ME_llama_secret_pass_67890

# Database configuration
DB_NAME=dungeon_data
DB_HOST=database
DB_PORT=5432

# ===========================================
# MODEL CACHE PATH
# ===========================================
# Path on your host machine where models are cached
MODEL_CACHE_PATH=./model_cache

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
# API URLs (internal Docker network)
IMAGE_API_URL=http://image_gen:8001
TTS_API_URL=http://tts_voice:8002
LLM_API_URL=http://llm_brain:8000

# ===========================================
# OPTIONAL: ADVANCED SETTINGS
# ===========================================
# Llama generation settings
LLAMA_MAX_TOKENS=256
LLAMA_TEMPERATURE=0.7

# TTS settings
TTS_DEFAULT_VOICE=gandalf
TTS_EXAGGERATION=0.6

# Image generation settings
IMAGE_DEFAULT_STYLE=fantasy
IMAGE_INFERENCE_STEPS=50